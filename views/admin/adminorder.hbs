{{>adminhead}}
<body>
  <div class="container-scroller">
    {{>adminnavbar}}
    <div class="container-fluid page-body-wrapper">
      {{>adminside}}
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="table-responsive">
              <table class="table table-hover" id="userData">
                <thead>
                  <tr>
                    <th></th>
                    <th>Order Id</th>
                    <th>User Id</th>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>Total</th>
                    <th>Payment</th>
                    <th>Status</th>
                    <th>Order Date</th>
                    <th>Order Time</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each order}}
                  <tr>
                    <td>{{inc @index}}</td>
                    <td>{{this._id}}</td>
                    <td>{{this.user}}</td>
                    <td>{{this.Name}}</td>
                    <td>{{this.Mobile}}</td>
                    <td>â‚¹{{this.ToatalAmount}}</td>
                    <td>{{this.payment}}</td>
                    <td>{{this.paymentStatus}}</td>
                    <td>{{this.orderDate}}</td>
                    <td>{{this.orderTime}}</td>
                    <td>
                      <a href="/admin/vieworderitems/{{this._id}}"> <button type="button" class="btn btn-primary">View Order</button>
                      </a>
                    </td>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
          </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <!-- partial -->
        </div>
      </div>
    </div>

    <script src="/admin/vendors/js/vendor.bundle.base.js"></script>
