<script>
  function addtocart(id) {
    $.ajax({
      url: "/addtocart/" + id,
      method: "get",
      success: (response) => {
        if (response.status) {
          swal({
            title: "Product Added",
            icon: "success",
            button: "OK",
          }).then(() => {
            location.reload()
          })
        } else {
          location.href = "/login"
        }
      }
    })
  }
</script>
