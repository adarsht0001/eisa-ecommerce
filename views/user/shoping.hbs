    <script>
        function search() {
            value = document.getElementById('search').value
            products = document.querySelectorAll('.produtsname')
            div = document.querySelectorAll('.productdiv')
            products.forEach((Element, i) => {
                name = Element.innerHTML
                if (name.search(value) != -1) {
                    div[i].hidden = false
                } else {
                    div[i].hidden = true
                }
            })
        }
    </script>
